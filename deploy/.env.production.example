# Production Environment Variables for EC2 Deployment
# Copy this to .env and fill in your values

# ===========================================
# DATABASE (Neon PostgreSQL)
# ===========================================
DATABASE_URL="postgresql://username:password@your-neon-host.neon.tech/neondb?sslmode=require"

# ===========================================
# CLERK AUTHENTICATION
# ===========================================
# Get these from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxxxxx
CLERK_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxx

# Clerk URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# ===========================================
# UPLOADTHING (File Uploads)
# ===========================================
# Get these from https://uploadthing.com/dashboard
UPLOADTHING_SECRET=sk_live_xxxxxxxxxxxxxxxx
UPLOADTHING_APP_ID=xxxxxxxx

# ===========================================
# LIVEKIT (Video/Audio Calls)
# ===========================================
# Get these from https://cloud.livekit.io
LIVEKIT_API_KEY=APIxxxxxxxx
LIVEKIT_API_SECRET=xxxxxxxxxxxxxxxx
NEXT_PUBLIC_LIVEKIT_URL=wss://your-project.livekit.cloud

# ===========================================
# REDIS (Optional - for caching)
# ===========================================
# Get from https://upstash.com (recommended for production)
# Leave empty to disable Redis caching
REDIS_URL=redis://default:xxxxxxxx@your-redis.upstash.io:6379

# ===========================================
# APPLICATION
# ===========================================
# Your domain (with https in production)
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# Node environment
NODE_ENV=production
